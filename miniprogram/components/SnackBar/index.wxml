<view
      class="fixed_dialog_wrap"
      catchtouchmove="catchtouchmove"
      style="z-index:{{zIndex}};"
      wx:if="{{_visible}}"
>
      <view
            class="dialog {{position}} {{cover?'cover':''}}"
            style="{{style}};{{cover?'padding:0':''}}"
      >
            <view
                  class="content_wrap {{type}} {{mini?'mini':''}}"
                  style="{{cover?'border-radius:0':''}};{{color?'color:'+color:''}};{{bgColor?'background:'+bgColor:''}};"
            >
                  <view
                        class="left"
                        catchtap="onLeft"
                  >
                        <text class="title {{description?'has_description':''}}">{{title}}</text>
                        <text
                              class="description"
                              wx:if="{{description}}"
                        >{{description}}{{slot}}</text>
                  </view>
                  <slot wx:if="{{custom}}"></slot>
                  <view
                        class="right"
                        wx:else
                  >
                        <button
                              class="btn_confirm"
                              catchtap="onOk"
                        >{{okText}}</button>
                  </view>
            </view>
      </view>
</view>