<view class="example_items w_100 border_box flex flex_column">
      <view class="mini_items column_2 visible_items">
            <view class="example_item w_100 border_box flex">
                  <view class="title_wrap w_100 border_box flex flex_column">
                        <text class="title">默认效果</text>
                        <text class="attr">default</text>
                  </view>
                  <light-icon
                        icon="{{blockRight}}"
                        color="white"
                        fillColor="black"
                        visibleWrap
                        filled
                        round
                        mark:type="default"
                        catchtap="onOption"
                  ></light-icon>
                  <light-toast
                        visible="{{visible_default}}"
                        title="default Toast"
                  ></light-toast>
            </view>
            <view class="example_item w_100 border_box flex">
                  <view class="title_wrap w_100 border_box flex flex_column">
                        <text class="title">顶部弹出</text>
                        <text class="attr">position</text>
                  </view>
                  <light-icon
                        icon="{{blockRight}}"
                        color="white"
                        fillColor="black"
                        visibleWrap
                        filled
                        round
                        mark:type="position"
                        catchtap="onOption"
                  ></light-icon>
                  <light-toast
                        visible="{{visible_position}}"
                        title="default Toast"
                        position="top"
                  ></light-toast>
            </view>
            <view class="example_item w_100 border_box flex">
                  <view class="title_wrap w_100 border_box flex flex_column">
                        <text class="title">自定义颜色</text>
                        <text class="attr">custom</text>
                  </view>
                  <light-icon
                        icon="{{blockRight}}"
                        color="white"
                        fillColor="black"
                        visibleWrap
                        filled
                        round
                        mark:type="custom"
                        catchtap="onOption"
                  ></light-icon>
                  <light-toast
                        visible="{{visible_custom}}"
                        title="default Toast"
                        color="white"
                        bgColor="linear-gradient(to right,red,blue)"
                  ></light-toast>
            </view>
            <view class="example_item w_100 border_box flex">
                  <view class="title_wrap w_100 border_box flex flex_column">
                        <text class="title">关闭时间</text>
                        <text class="attr">duration</text>
                  </view>
                  <light-icon
                        icon="{{blockRight}}"
                        color="white"
                        fillColor="black"
                        visibleWrap
                        filled
                        round
                        mark:type="duration"
                        catchtap="onOption"
                  ></light-icon>
                  <light-toast
                        visible="{{visible_duration}}"
                        title="default Toast"
                        duration="{{1000}}"
                  ></light-toast>
            </view>
      </view>
      <view class="example_item w_100 border_box flex">
            <view class="title_wrap w_100 border_box flex flex_column">
                  <text class="title">设定类型</text>
                  <text class="attr">type</text>
            </view>
            <view class="examples flex flex_wrap">
                  <view class="example flex flex_wrap">
                        <light-button
                              class="mr_24 mb_24"
                              type="border"
                              mark:type="default"
                              catchtap="onOption"
                        >default</light-button>
                        <light-button
                              class="mr_24 mb_24"
                              type="border"
                              mark:type="success"
                              catchtap="onOption"
                        >success</light-button>
                        <light-button
                              class="mr_24 mb_24"
                              type="border"
                              mark:type="warning"
                              catchtap="onOption"
                        >warning</light-button>
                        <light-button
                              type="border"
                              mark:type="error"
                              catchtap="onOption"
                        >error</light-button>
                        <light-toast
                              visible="{{visible_success}}"
                              title="success Toast"
                              type="success"
                        ></light-toast>
                        <light-toast
                              visible="{{visible_warning}}"
                              title="warning Toast"
                              type="warning"
                        ></light-toast>
                        <light-toast
                              visible="{{visible_error}}"
                              title="error Toast"
                              type="error"
                        ></light-toast>
                  </view>
            </view>
      </view>
      <view class="example_item w_100 border_box flex">
            <view class="title_wrap w_100 border_box flex flex_column">
                  <text class="title">背景色</text>
                  <text class="attr">useColor</text>
            </view>
            <view class="examples flex flex_wrap">
                  <view class="example flex flex_wrap">
                        <light-button
                              class="mr_24 mb_24"
                              mark:type="default"
                              catchtap="onOption"
                        >default</light-button>
                        <light-button
                              class="mr_24 mb_24"
                              type="success"
                              mark:type="useColor_success"
                              catchtap="onOption"
                        >success</light-button>
                        <light-button
                              class="mr_24 mb_24"
                              type="warning"
                              mark:type="useColor_warning"
                              catchtap="onOption"
                        >warning</light-button>
                        <light-button
                              type="error"
                              mark:type="useColor_error"
                              catchtap="onOption"
                        >error</light-button>
                        <light-toast
                              visible="{{visible_useColor_success}}"
                              title="success Toast"
                              type="success"
                              useColor
                        ></light-toast>
                        <light-toast
                              visible="{{visible_useColor_warning}}"
                              title="warning Toast"
                              type="warning"
                              useColor
                        ></light-toast>
                        <light-toast
                              visible="{{visible_useColor_error}}"
                              title="error Toast"
                              type="error"
                              useColor
                        ></light-toast>
                  </view>
            </view>
      </view>
</view>