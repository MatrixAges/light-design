{
      "compilerOptions": {
            "strictNullChecks": true,
            "noImplicitAny": true,
            "module": "CommonJS",
            "target": "ES5",
            "allowJs": false,
            "experimentalDecorators": true,
            "noImplicitThis": true,
            "noImplicitReturns": true,
            "alwaysStrict": true,
            "inlineSourceMap": false,
            "inlineSources": false,
            "noFallthroughCasesInSwitch": true,
            "noUnusedLocals": true,
            "noUnusedParameters": true,
            "strict": true,
            "removeComments": true,
            "pretty": true,
            "strictPropertyInitialization": true,
            "lib": [
                  "ES2015"
            ],
            "typeRoots": [
                  "./typings"
            ]
      },
      "include": [
            "./**/*.ts"
      ],
      "exclude": [
            "node_modules"
      ]
}