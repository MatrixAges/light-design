<view
      class="fixed_dialog_wrap"
      catchtouchmove="catchtouchmove"
      style="z-index:{{zIndex}}"
      wx:if="{{_visible_dialog_wrap}}"
>
      <view class="dialog_wrap">
            <view
                  class="mask {{_visible_mask?'visible':'hidden'}}"
                  catchtap="onClose"
            ></view>
            <view class="dialog {{_visible_dialog?'visible':'hidden'}} {{vertical?'vertical':''}}">
                  <text
                        class="title"
                        wx:if="{{title}}"
                  >{{title}}</text>
                  <scroll-view
                        class="action_items {{scroll?'scroll':''}}"
                        scroll-x="{{scroll}}"
                        scroll-y="{{vertical}}"
                        enable-flex="{{true}}"
                        catchtap="onActionItem"
                  >
                        <button
                              class="action_item"
                              style="width:calc(100%/{{column}} - {{scroll?32:0}}rpx);"
                              wx:for="{{list}}"
                              wx:key="index"
                              mark:index="{{index}}"
                        >
                              <view class="flex_wrap">
                                    <view class="icon_wrap">
                                          <image
                                                class="icon_action"
                                                mode="widthFix"
                                                src="{{item.icon}}"
                                          ></image>
                                    </view>
                                    <text class="name">{{item.name}}</text>
                              </view>
                        </button>
                  </scroll-view>
            </view>
      </view>
</view>